    function mainjsfunction(inputFieldValue) {
        console.log(inputFieldValue);
        //do something with input field value
    }


                                    $('#datasearch').on('input', function () {
                                            if ($(this).val().trim() != '') {
                                                //Añado clases y muestro el span de error
                                                stateInput('data', 'false', 'true', 'danger', 'success');
                                            } else {
                                                stateInput('data', 'true', 'false', 'success', 'danger');
                                            }
                                    });


                                     $('#nompriE').on('input', function () {
                                                if ($(this).val().trim() != '') {
                                                    //Añado clases y muestro el span de error
                                                    stateInput('nom', 'false', 'true', 'danger', 'success');
                                                } else {
                                                    stateInput('nom', 'true', 'false', 'success', 'danger');
                                                }
                                     });

                                     let stateInput = (id, success, danger, hassucess, hasdanger) => {
                                            $(`#state-${id}-validate`).removeClass(`has-${hassucess}`);
                                            $(`#state-${id}-validate`).addClass(`has-${hasdanger}`);
                                            $(`#input_validate_${id}_${success}`).css(`visibility`, `hidden`);
                                            $(`#input_validate_${id}_${danger}`).css(`visibility`, `visible`);
                                  };
</script>

