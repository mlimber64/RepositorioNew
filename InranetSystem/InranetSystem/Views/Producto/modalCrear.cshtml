<div class="modal fade" id="myModalCreate" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color:#f1f2f6">

                <h5 class="modal-title" id="exampleModalLabel">
                    REGISTRAR PRODUCTO
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmModal">
                    <div class="form-group m-form__group row">
                        <div class="col-lg-6">
                            <label class="">TIPO :</label>

                            @Html.DropDownList("tipocre", (SelectList)ViewBag.TipoProducto, new { @style = "width:70%" })


                            <span class="m-form__help"></span>
                        </div>


                        <div class="col-lg-6">
                            
                            <label class="">NOMBRE :</label>

                            <input type="text" class="form-control m-input" id="nomcre">


                            <span class="m-form__help"></span>
                        </div>
                    </div>
           
            <div class="form-group m-form__group row">

                <div class="col-lg-6">
                    <label class="">PRECIO COMPRA :</label>

                    <input type="text" class="form-control m-input" id="prcomcre">


                    <span class="m-form__help"> </span>
                </div>
                <div class="col-lg-6">
                    <label class="">PRECIO VENTA :</label>

                    <input type="text" class="form-control m-input" id="prvencre">


                    <span class="m-form__help"> </span>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-6">
                    <label class="">STOCK ACTUAL :</label>

                    <input type="text" class="form-control m-input" id="stkactcre">


                    <span class="m-form__help"> </span>
                </div>
                <div class="col-lg-6">
                    <label class="">STOCK MINIMO :</label>

                    <input type="text" class="form-control m-input" id="stkmincre">


                    <span class="m-form__help"> </span>
                </div>
            </div>
            <div class="col-lg">

                <label class="">DESCRIPCIÓN :</label>

                <textarea class="form-control m-input" rows="3" id="descre"></textarea>


                <span class="m-form__help"></span>
            </div>
            
            </form>

        </div>
            <div class="modal-footer" style="background-color:#f1f2f6">
                <button type="button" class="btn btn-metal" data-dismiss="modal" id="btnCancelCreatePesona">
                    Cancelar
                </button>
                <button type="button" class="btn btn-success" id="btnSendCreate">
                    Registrar
                </button>
            </div>
        </div>
    </div>
 </div>

